<%= content_tag(:tr) do %>
  <%= content_tag(:td) do %>
    <%= flower.name %>
  <% end -%>

  <%= content_tag(:td) do %>
    <%= flower.price if flower.price %>
  <% end -%>

  <%= content_tag(:td) do %>
    <%= flower.created_at.strftime("%Y-%m-%d %H:%M") %>
  <% end -%>

  <%= content_tag(:td) do %>
    <%= flower.updated_at.strftime("%Y-%m-%d %H:%M") %>
  <% end -%>

  <%= content_tag(:td) do %>
    <%= link_to("Edit", edit_flower_path(flower)) %> |
    <%= link_to("Delete", flower_path(flower), method: :delete, data: { confirm: "Are you sure you want to delete this flower?
"}) %>
  <% end -%>
<% end -%>
