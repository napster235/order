<%= content_tag(:div, class: "col-6") do %>
  <%= content_tag(:div, class: "form-group") do %>
    <%= form.label(:order_number, "Order Number") %>
    <%= form.text_field(:order_number, class: "form-control") %>

    <%= content_tag(:span, form.object.errors.full_messages_for(:order_number).join(".\n"), class: "text-danger") %>
  <% end -%>

  <%= content_tag(:div, class: "form-group") do %>
    <%= form.label(:flower, "Flower") %>
    <%= form.collection_select(:flower_ids, Flower.all, :id, :name, { prompt: true }, class: "form-control" ) %>

    <%= content_tag(:span, form.object.errors.full_messages_for(:flowers).join(".\n"), class: "text-danger") %>
  <% end -%>

  <%= content_tag(:div, class: "form-group") do %>
    <%= form.label(:status, "Status", class: "form-label") %>
    <%= form.collection_select(:status, Order.statuses.map { |a| [a.first, a.first] }, :first, :second, { include_blank: true }, { class: "custom-select" } ) %>

    <%= content_tag(:span, form.object.errors.full_messages_for(:status).join(".\n"), class: "text-danger") %>
  <% end -%>

  <%= content_tag(:div, class: "d-flex") do %>
    <%= content_tag(:div, class: "form-group") do %>
      <%= form.submit("Save", data: { "disable-with" => "Saving..." }, class: "btn btn-primary") %>
      <%= link_to("Cancel", orders_path(), class: "btn btn-link") %>
    <% end -%>
  <% end -%>
<% end -%>
