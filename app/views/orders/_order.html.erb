<%= content_tag(:tr) do %>
  <%= content_tag(:td) do %>
    <%= order.order_number %>
  <% end -%>

  <%= content_tag(:td) do %>
    <%= order.flowers.collect(&:name).join() %>
  <% end -%>

  <%= content_tag(:td) do %>
    <%= order.status if order.status %>
  <% end -%>

  <%= content_tag(:td) do %>
    <%= order.created_at.strftime("%Y-%m-%d %H:%M") %>
  <% end -%>

  <%= content_tag(:td) do %>
    <%= order.updated_at.strftime("%Y-%m-%d %H:%M") %>
  <% end -%>

  <%= content_tag(:td) do %>
    <%= link_to("Edit", edit_order_path(order)) %> |
    <%= link_to("Delete", order_path(order), method: :delete, data: { confirm: "Are you sure you want to delete this order?
"}) %>
  <% end -%>
<% end -%>
